 	clocks = <&cpm_syscon0 1 21>;
 	status = "disabled";
 };
@@ -182,7 +182,7 @@ spi@700680 {
 	reg = <0x700680 0x50>;
 	#address-cells = <0x1>;
 	#size-cells = <0x0>;
-	cell-index = <0x0>;
+	cell-index = <0x2>;
