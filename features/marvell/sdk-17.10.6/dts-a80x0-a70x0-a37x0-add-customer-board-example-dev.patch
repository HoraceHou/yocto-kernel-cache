+						label = "Bootloader";
+						reg = <0 0x200000>;
+					};
+					partition@200000 {
+						label = "U-boot Env";
+						reg = <0x200000 0x10000>;
+					};
+					partition@210000 {
+						label = "Linux";
+						reg = <0x210000 0xDF0000>;
+					};
+				};
+			};
+
+			i2c0: i2c@11000 {
+				status = "disabled";
+				/* UPDATE */
