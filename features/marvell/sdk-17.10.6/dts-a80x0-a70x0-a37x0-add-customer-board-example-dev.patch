+					#gpio-cells = <2>;
+				};
+			};
+
+			i2c1: i2c@11080 {
+				status = "disabled";
+			};
+
+			/*
+			* Exported on the micro USB connector CON32
+			* through an FTDI
+			*/
+			uart0: serial@12000 {
+				status = "disabled";
+			};
+
