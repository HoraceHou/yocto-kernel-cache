+			};
+
+			usb@5e000 {
+				status = "disabled";
+			};
+
+			interrupt-controller@74840 {
+				status = "disabled";
+			};
+
+			sdhci1: sdhci@d0000 {
+				wp-inverted;
+				bus-width = <4>;
+				cd-gpios = <&gpio_sb 2 GPIO_ACTIVE_LOW>;
+				vqmmc-supply = <&vcc_sd_reg1>;
