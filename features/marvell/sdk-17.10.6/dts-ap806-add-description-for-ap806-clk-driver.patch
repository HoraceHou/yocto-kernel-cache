 			};
 
+			ap806_clock: ap806_clock@6f8200 {
+				compatible = "marvell,ap806-cpu-clk", "syscon";
+				#clock-cells = <1>;
+				clocks = <&syscon 0>;
+				reg = <0x6f8200 0x100>;
+				status = "okay";
+			};
+
