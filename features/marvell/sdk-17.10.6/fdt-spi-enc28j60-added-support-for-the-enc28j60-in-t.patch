index db5b9f6..243d522 100644
--- a/arch/arm/boot/dts/armada-385-db-ap.dts
+++ b/arch/arm/boot/dts/armada-385-db-ap.dts
@@ -262,4 +262,9 @@
 		reg = <0>; /* Chip select 0 */
 		spi-max-frequency = <54000000>;
 	};
+	ethernet: enc28j60@0 {
+		compatible = "microchip,enc28j60";
+		spi-max-frequency = <20000000>;
+		reg = <1>;
+	};
 };
