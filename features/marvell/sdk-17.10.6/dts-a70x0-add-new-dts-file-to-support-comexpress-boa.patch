+/*
+ * Device Tree file for Marvell Armada 7020 COMEXPRESS board
+ * This board file supports the comexress board configuration
+ */
+
+#include "armada-7020-amc.dts"
+
+/ {
+	model = "Marvell Armada-7020 COMEXPRESS board setup";
+	compatible = "marvell,armada7020-comexpress", "marvell,armada7020",
+			"marvell,armada-ap806";
+
+	cp0 {
+		config-space {
+			mdio@12a200 {
+				#address-cells = <1>;
+				#size-cells = <0>;
+				status = "okay";
+				cp0_phy0: ethernet-phy@1 {
+					reg = <0x10>;
+				};
+			};
+
+			gop {
+				cp0_emac2: mac2 {
+					phy-mode = "rgmii"; /* rgmii-1 */
+					phy = <&cp0_phy0>;
+				};
+			};
+		};
+	};
+};
