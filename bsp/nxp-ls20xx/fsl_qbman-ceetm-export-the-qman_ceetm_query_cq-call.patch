---
 include/linux/fsl_qman.h | 12 ++++++++++++
 1 file changed, 12 insertions(+)

diff --git a/include/linux/fsl_qman.h b/include/linux/fsl_qman.h
index 4e4b21d55169..56c05fdb9927 100644
--- a/include/linux/fsl_qman.h
