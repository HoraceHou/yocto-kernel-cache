+	V3P3-supply = <&V3P3_reg>;
+	VCOM-supply = <&VCOM_reg>;
+	DISPLAY-supply = <&DISPLAY_reg>;
+	en-gpios = <&extended_io 5 0>;
+	status = "disabled";
+};
+
 &epxp {
 	status = "okay";
 };
@@ -450,6 +460,76 @@
 		reg = <0x39>;
 		status = "okay";
