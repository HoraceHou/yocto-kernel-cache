From d45736b3f7cb717f4e487c045e2e759280883d6b Mon Sep 17 00:00:00 2001
From: Shengjiu Wang <shengjiu.wang@freescale.com>
Date: Thu, 3 Aug 2017 11:08:24 +0800
Subject: [PATCH 2283/5242] MLK-16130-4: ARM64: dts: add hdmi audio device
 node

commit  97e833f2d8441a6c78309cf0821d0fc52635e818 from
https://source.codeaurora.org/external/imx/linux-imx.git

add hdmi audio device node

Signed-off-by: Shengjiu Wang <shengjiu.wang@freescale.com>
Signed-off-by: Meng Li <Meng.Li@windriver.com>
---
 arch/arm64/boot/dts/freescale/fsl-imx8mq-evk.dts |   25 +++++++++++++++++++---
 1 file changed, 22 insertions(+), 3 deletions(-)

diff --git a/arch/arm64/boot/dts/freescale/fsl-imx8mq-evk.dts b/arch/arm64/boot/dts/freescale/fsl-imx8mq-evk.dts
index b2fd27a..274666b 100644
--- a/arch/arm64/boot/dts/freescale/fsl-imx8mq-evk.dts
+++ b/arch/arm64/boot/dts/freescale/fsl-imx8mq-evk.dts
@@ -69,6 +69,14 @@
 			"Line Out Jack", "LINEVOUTR";
 	};
 
+	sound-hdmi {
+		compatible = "fsl,imx-audio-cdnhdmi";
+		model = "imx-audio-hdmi";
+		audio-cpu = <&sai4>;
+		video-mode = <95>;	/* #16: 1920x1080p@60HZ 16:9 */
+					/* #95: 3840x2160p@30Hz 16:9 */
+	};
+
 	pwmleds {
 		compatible = "pwm-leds";
 
@@ -80,6 +88,11 @@
 	};
 };
 
+&clk {
+	assigned-clocks = <&clk IMX8MQ_AUDIO_PLL1>;
+	assigned-clock-rates = <786432000>;
+};
+
 &iomuxc {
 	pinctrl-names = "default";
 
@@ -552,11 +565,17 @@
 	pinctrl-names = "default";
 	pinctrl-0 = <&pinctrl_sai2>;
 	assigned-clocks = <&clk IMX8MQ_CLK_SAI2_SRC>,
-			<&clk IMX8MQ_AUDIO_PLL1>,
-			<&clk IMX8MQ_CLK_SAI2_PRE_DIV>,
 			<&clk IMX8MQ_CLK_SAI2_DIV>;
 	assigned-clock-parents = <&clk IMX8MQ_AUDIO_PLL1_OUT>;
-	assigned-clock-rates = <0>, <786432000>, <98306000>, <24576000>;
+	assigned-clock-rates = <0>, <24576000>;
+	status = "okay";
+};
+
+&sai4 {
+	assigned-clocks = <&clk IMX8MQ_CLK_SAI4_SRC>,
+			<&clk IMX8MQ_CLK_SAI4_DIV>;
+	assigned-clock-parents = <&clk IMX8MQ_AUDIO_PLL1_OUT>;
+	assigned-clock-rates = <0>, <24576000>;
 	status = "okay";
 };
 
