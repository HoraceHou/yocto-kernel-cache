Subject: [PATCH 1987/5242] MLK-15135-2 dma: Kconfig: add sdma on i.mx8mq

commit  394f9be303cfff0c197b2bd4dfd2abc07d78850a from
https://source.codeaurora.org/external/imx/linux-imx.git

select sdma on i.mx8mq.

Signed-off-by: Robin Gong <yibin.gong@nxp.com>
Signed-off-by: Meng Li <Meng.Li@windriver.com>
---
 drivers/dma/Kconfig |    2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/drivers/dma/Kconfig b/drivers/dma/Kconfig
index d8edf23..3fb98c6 100644
--- a/drivers/dma/Kconfig
+++ b/drivers/dma/Kconfig
@@ -260,7 +260,7 @@ config IMX_DMA
 
 config IMX_SDMA
 	tristate "i.MX SDMA support"
-	depends on ARCH_MXC
+	depends on ARCH_MXC || ARCH_FSL_IMX8MQ
 	select DMA_ENGINE
 	select DMA_VIRTUAL_CHANNELS
 	help
