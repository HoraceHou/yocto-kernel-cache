From 425ef336330d40e847fd55076a84aa5f3ebea906 Mon Sep 17 00:00:00 2001
From: Frank Li <Frank.Li@nxp.com>
Date: Fri, 19 May 2017 15:44:47 -0500
Subject: [PATCH 1807/5242] MLK-14955-1 imx8: Added MXC_ARM64 into dependent

commit  38eb21e1761fc7ed57535b5578baa2367daf5212 from
https://source.codeaurora.org/external/imx/linux-imx.git

Otherwise there are warning when remove COMPILE_TEST

Signed-off-by: Frank Li <Frank.Li@nxp.com>
Signed-off-by: Meng Li <Meng.Li@windriver.com>
---
 drivers/tty/serial/Kconfig |    2 +-
 sound/soc/fsl/Kconfig      |    2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/drivers/tty/serial/Kconfig b/drivers/tty/serial/Kconfig
index df8bd0c..655ab14 100644
--- a/drivers/tty/serial/Kconfig
+++ b/drivers/tty/serial/Kconfig
@@ -499,7 +499,7 @@ config SERIAL_SA1100_CONSOLE
 
 config SERIAL_IMX
 	tristate "IMX serial port support"
-	depends on ARCH_MXC || COMPILE_TEST
+	depends on ARCH_MXC || ARCH_MXC_ARM64 || COMPILE_TEST
 	select SERIAL_CORE
 	select RATIONAL
 	select SERIAL_MCTRL_GPIO if GPIOLIB
diff --git a/sound/soc/fsl/Kconfig b/sound/soc/fsl/Kconfig
index 7b6fc60..3cb16ba 100644
--- a/sound/soc/fsl/Kconfig
+++ b/sound/soc/fsl/Kconfig
@@ -106,7 +106,7 @@ config SND_POWERPC_SOC
 
 config SND_IMX_SOC
 	tristate "SoC Audio for Freescale i.MX CPUs"
-	depends on ARCH_MXC || COMPILE_TEST
+	depends on ARCH_MXC || ARCH_MXC_ARM64 || COMPILE_TEST
 	help
 	  Say Y or M if you want to add support for codecs attached to
 	  the i.MX CPUs.
