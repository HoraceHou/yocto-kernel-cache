From 245855870e75b6fd4971e7773fa7cc3e4b8c49f6 Mon Sep 17 00:00:00 2001
From: Anson Huang <Anson.Huang@nxp.com>
Date: Fri, 28 Jul 2017 10:20:51 +0800
Subject: [PATCH 2258/5242] MLK-16093-1 arm64: dts: freescale: imx8mq: add cpu
 cooling device

commit  79fb241dba608dfd69630ff765434b5c580f8b87 from
https://source.codeaurora.org/external/imx/linux-imx.git

Add cpu cooling device support for i.MX8MQ.

Signed-off-by: Anson Huang <Anson.Huang@nxp.com>
Signed-off-by: Meng Li <Meng.Li@windriver.com>
---
 arch/arm64/boot/dts/freescale/fsl-imx8mq.dtsi |   10 ++++++++++
 1 file changed, 10 insertions(+)

diff --git a/arch/arm64/boot/dts/freescale/fsl-imx8mq.dtsi b/arch/arm64/boot/dts/freescale/fsl-imx8mq.dtsi
index f87b4cc..a2f08d7 100644
--- a/arch/arm64/boot/dts/freescale/fsl-imx8mq.dtsi
+++ b/arch/arm64/boot/dts/freescale/fsl-imx8mq.dtsi
@@ -19,6 +19,7 @@
 #include <dt-bindings/input/input.h>
 #include <dt-bindings/interrupt-controller/arm-gic.h>
 #include <dt-bindings/pinctrl/pins-imx8mq.h>
+#include <dt-bindings/thermal/thermal.h>
 
 / {
 	compatible = "fsl,imx8mq";
@@ -284,6 +285,14 @@
 					type = "critical";
 				};
 			};
+
+			cooling-maps {
+				map0 {
+					trip = <&cpu_alert0>;
+					cooling-device =
+					<&A53_0 THERMAL_NO_LIMIT THERMAL_NO_LIMIT>;
+				};
+			};
 		};
 	};
 
@@ -930,4 +939,5 @@
 	clock-names = "a53", "arm_a53_src", "arm_pll",
 		"arm_pll_out", "sys1_pll_800m";
 	clock-latency = <61036>;
+	#cooling-cells = <2>;
 };
