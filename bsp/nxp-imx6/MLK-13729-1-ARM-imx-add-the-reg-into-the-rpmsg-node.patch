 arch/arm/boot/dts/imx6sx-sdb-m4.dts |    2 ++
 arch/arm/boot/dts/imx7d-sdb-m4.dtsi |    2 ++
 2 files changed, 4 insertions(+)

diff --git a/arch/arm/boot/dts/imx6sx-sdb-m4.dts b/arch/arm/boot/dts/imx6sx-sdb-m4.dts
