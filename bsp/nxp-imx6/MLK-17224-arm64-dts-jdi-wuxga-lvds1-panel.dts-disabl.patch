index 5f9357c..0ee41a6 100644
--- a/arch/arm64/boot/dts/freescale/fsl-imx8qm-lpddr4-arm2-jdi-wuxga-lvds1-panel.dts
+++ b/arch/arm64/boot/dts/freescale/fsl-imx8qm-lpddr4-arm2-jdi-wuxga-lvds1-panel.dts
@@ -27,6 +27,14 @@
 	};
 };
 
+&ldb1_phy {
+       status = "disabled";
+};
+
+&ldb1 {
+       status = "disabled";
+};
+
 &ldb2_phy {
 	status = "okay";
