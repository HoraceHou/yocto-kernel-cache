+};
+
+&irqsteer_lvds1 {
+	xen,passthrough;
+};
+
+&i2c1_lvds1 {
+	xen,passthrough;
+};
+
+&ldb2_phy {
+	xen,passthrough;
+};
+
+&ldb2 {
+	xen,passthrough;
+};
+
+&crypto {
+	/* Met CAAM failure on A0, disable it first */
+	status = "disabled";
+};
+
+&dpu2_intsteer {
+	xen,passthrough;
+};
+
+&dpu2 {
+	xen,passthrough;
+	#stream-id-cells = <1>;
+	iommus = <&smmu>;
+};
+
+&prg10 {
+	xen,passthrough;
+};
+
+&prg11 {
+	xen,passthrough;
+};
+
+&prg12 {
+	xen,passthrough;
+};
+
+&prg13 {
+	xen,passthrough;
+};
+
+&prg14 {
