+};
+
+&sdhc1_lpcg {
+	xen,passthrough;
+};
+
+&lpuart1 {
+	xen,passthrough;
+};
+
+&lpuart1_lpcg {
+	xen,passthrough;
+};
+
+&di_lvds1_lpcg {
+	xen,passthrough;
+};
+
+&dc_1_lpcg {
