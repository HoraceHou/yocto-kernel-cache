+};
+
+/* GPU */
+&pd_gpu1 {
+	xen,passthrough;
+};
+
+&gpu_3d1 {
+	xen,passthrough;
+	#stream-id-cells = <1>;
+	iommus = <&smmu>;
+};
+
+&imx8_gpu_ss {
+	cores = <&gpu_3d0>;
+	/delete-property/ reg;
+	/delete-property/ reg-names;
+};
+
+&sata {
+	status = "disabled";
+};
+
+&usdhc1 {
+	xen,passthrough;
+	#stream-id-cells = <1>;
+	iommus = <&smmu>;
+};
+
+&usbotg1 {
+	/* Hack reg */
+	reg = <0x0 0x5b0d0000 0x0 0x1000>;
+	xen,passthrough;
+	#stream-id-cells = <1>;
+	iommus = <&smmu>;
+};
+
+&usbmisc1 {
+	/* Hack */
+	/delete-property/ reg;
+	status = "disabled";
+};
+
+&usbphy1 {
+	reg = <0x0 0x5b100000 0x0 0x1000>;
+	xen,passthrough;
+};
