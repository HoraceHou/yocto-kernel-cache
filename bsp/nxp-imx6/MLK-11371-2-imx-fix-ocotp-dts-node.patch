From 2fa728f4dbc21d44c52b19b0b50048e7f5ee7e55 Mon Sep 17 00:00:00 2001
From: Peng Fan <Peng.Fan@freescale.com>
Date: Tue, 18 Aug 2015 09:25:10 +0800
Subject: [PATCH 0508/5242] MLK-11371-2 imx: fix ocotp dts node

commit  47f7fe7e5439b157d8be9f842de8aaaba2e74e1a from
https://source.codeaurora.org/external/imx/linux-imx.git

Fix imx6/7 ocotp dts node.

Signed-off-by: Peng Fan <Peng.Fan@freescale.com>
Signed-off-by: Meng Li <Meng.Li@windriver.com>
---
 arch/arm/boot/dts/imx6sx.dtsi |    2 +-
 arch/arm/boot/dts/imx7d.dtsi  |    4 ++--
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/arch/arm/boot/dts/imx6sx.dtsi b/arch/arm/boot/dts/imx6sx.dtsi
index 9b7ba83..b6e25a6 100644
--- a/arch/arm/boot/dts/imx6sx.dtsi
+++ b/arch/arm/boot/dts/imx6sx.dtsi
@@ -1122,7 +1122,7 @@
 			ocotp: ocotp@21bc000 {
 				#address-cells = <1>;
 				#size-cells = <1>;
-				compatible = "fsl,imx6sx-ocotp", "syscon";
+				compatible = "fsl,imx6sx-ocotp", "fsl,imx6q-ocotp", "syscon";
 				reg = <0x021bc000 0x4000>;
 				clocks = <&clks IMX6SX_CLK_OCOTP>;
 
diff --git a/arch/arm/boot/dts/imx7d.dtsi b/arch/arm/boot/dts/imx7d.dtsi
index cf44db4..8166184 100644
--- a/arch/arm/boot/dts/imx7d.dtsi
+++ b/arch/arm/boot/dts/imx7d.dtsi
@@ -142,8 +142,8 @@
 		status = "disabled";
 	};
 
-	ocotp-fuse@30350000 {
-		compatible = "fsl,imx7d-ocotp";
+	ocotp: ocotp-ctrl@30350000 {
+		compatible = "fsl,imx7d-ocotp", "syscon";
 		reg = <0x30350000 0x10000>;
 		clocks = <&clks IMX7D_OCOTP_CLK>;
 	};
